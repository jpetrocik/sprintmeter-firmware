<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DARK_GRAY"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/speedo_time_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingLeft="5dp"
            android:text="Time"
            android:textColor="@color/LCD_TEXT" />

        <TextView
            android:id="@+id/speedo_time_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:includeFontPadding="false"
            android:text="00:00.000"
            android:textColor="@color/LCD_TEXT"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/speedo_mph_20"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:paddingLeft="5dp"
            android:text="20mph @ -.---"
            android:textColor="@color/LCD_TEXT" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/bottom_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/speedo_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|fill"
                android:paddingLeft="5dp"
                android:text="Spd"
                android:textColor="@color/LCD_TEXT" />

            <TextView
                android:id="@+id/speedo_speed_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="00.0"
                android:textColor="@color/LCD_TEXT"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:background="@drawable/left_bottom_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/speedo_distance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|fill"
	            android:textColor="@color/LCD_TEXT"
                android:paddingLeft="5dp"
                android:text="Dst" />

            <TextView
                android:id="@+id/speedo_distance_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0000.0"
                android:textColor="@color/LCD_TEXT"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/left_bottom_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/speedo_max_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|fill"
                android:paddingLeft="5dp"
                android:text="Max"
                android:textColor="@color/LCD_TEXT" />

            <TextView
                android:id="@+id/speed_max_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="00.0"
                android:textColor="@color/LCD_TEXT"
                android:textSize="40sp" />
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>
